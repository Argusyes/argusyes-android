<resources>
    <!-- Base application theme. -->
    <style name="Theme.Argusyes" parent="Theme.AppCompat.Light">
        <!-- 重点文字 -->
        <item name="colorPrimary">@color/red</item>
        <!-- 重点文字2 -->
        <item name="colorSecondary">@color/green</item>
        <!-- 大背景 -->
        <item name="colorOnBackground">@color/grey_0</item>
        <!-- 文字 -->
        <item name="colorOnSurface">@color/black</item>
        <!-- hint / 次要容器背景 -->
        <item name="colorOnSecondary">@color/grey_10</item>
        <!-- 主要容器背景 -->
        <item name="colorOnPrimary">@color/white</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?colorOnBackground</item>
        <item name="android:navigationBarColor">?colorOnBackground</item>
        <!-- Customize your theme here. -->
        <item name="android:background">?colorOnBackground</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>