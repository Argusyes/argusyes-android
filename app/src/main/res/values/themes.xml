<resources>
    <!-- Base application theme. -->
    <style name="Theme.Argusyes" parent="Theme.AppCompat.Light">
        <!-- 重点 -->
        <item name="highlightRed">@color/red</item>
        <!-- 重点 -->
        <item name="highlightGreen">@color/green</item>
        <!-- 大背景 -->
        <item name="myBackColor">@color/grey_0</item>
        <!-- 半透明背景 -->
        <item name="myTransBackColor">@color/half_trans_grey_0</item>
        <!-- 文字 -->
        <item name="myTextColor">@color/black</item>
        <!-- 次要文字 -->
        <item name="myTextSecondaryColor">@color/grey_30</item>
        <!-- hint -->
        <item name="myHintColor">@color/grey_20</item>
        <!-- 主要容器背景 -->
        <item name="myContainerColor">@color/white</item>
        <!-- 次要容器背景 -->
        @<item name="myContainerSecondaryColor">@color/grey_10</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?myBackColor</item>

        <!-- status nav color. -->
        <item name="android:navigationBarColor">?myBackColor</item>
        <item name="android:windowActionBar">false</item>

        <!-- menu -->
        <item name="colorPrimary">?highlightRed</item>

    </style>
</resources>