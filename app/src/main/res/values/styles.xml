<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="myNavigationBottomStyle" >
        <item name="android:textSize">16sp</item>
    </style>

    <style name="myFragment">
        <item name="android:padding">20sp</item>
    </style>

    <style name="noPaddingLayout">
        <item name="android:padding">0sp</item>
    </style>

    <style name="myFragmentTitleText">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">?myTextColor</item>
    </style>

    <style name="myFragmentTitleImageButton">
        <item name="android:minWidth">54sp</item>
        <item name="android:minHeight">54sp</item>
    </style>

    <style name="mySearchLayout">
        <item name="android:padding">0sp</item>
        <item name="android:background">@drawable/corners_bg_black</item>
    </style>

    <style name="mySearchImageView">
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/ic_search</item>
        <item name="android:background">@color/trans</item>
    </style>

    <style name="mySearchTextInput">
        <item name="android:textCursorDrawable">@drawable/cursor_line</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/grey_50</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mySearchCancelButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?highlightRed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/cancel</item>
    </style>

    <style name="myText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?myTextColor</item>
    </style>

    <style name="myPrimaryText">
        <item name="android:textColor">?highlightRed</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myHintSmallText">
        <item name="android:textColor">?myTextSecondaryColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="myServerAddTextInputLayout">
        <item name="android:background">@color/trans</item>
    </style>

    <style name="myServerAddTextInput">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">?myHintColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textCursorDrawable">@drawable/cursor_line</item>
    </style>

    <style name="myLinkText">
        <item name="android:textColorLink">?myTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>