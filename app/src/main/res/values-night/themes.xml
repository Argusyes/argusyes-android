<resources>
    <!-- Base application theme. -->
    <style name="Theme.Argusyes" parent="Theme.AppCompat.DayNight">
        <item name="highlightRed">@color/red</item>
        <item name="highlightGreen">@color/green</item>
        <item name="highlightPurple">@color/purple</item>
        <item name="highlightYellow">@color/yellow</item>
        <item name="myBackColor">@color/black</item>
        <item name="myTransBackColor">@color/half_trans_black</item>
        <item name="myTextColor">@color/white</item>
        <item name="myTextSecondaryColor">@color/grey_40</item>
        <item name="myHintColor">@color/grey_50</item>
        <item name="myContainerColor">@color/grey_100</item>
        <item name="myContainerSecondaryColor">@color/grey_100</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">?myBackColor</item>

        <!-- status nav color. -->
        <item name="android:navigationBarColor">?myBackColor</item>
        <item name="android:windowActionBar">false</item>

        <!-- menu -->
        <item name="colorPrimary">?highlightRed</item>
    </style>
</resources>