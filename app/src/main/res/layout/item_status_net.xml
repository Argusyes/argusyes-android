<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trans"
    android:orientation="vertical"
    android:padding="10sp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|center"
        android:theme="@style/noPaddingLayout">

        <ImageView
            android:id="@+id/net_virtual_image_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_wifi" />

        <TextView
            android:id="@+id/net_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:theme="@style/mySmallTextSecondary"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/net_ip_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/mySmallTextSecondary"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0sp"
            android:gravity="center_vertical|start" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/up_second"
                android:layout_gravity="start"
                android:theme="@style/mySmallTextSecondary"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0sp"
                android:layout_gravity="start" >

                <TextView
                    android:id="@+id/net_up_speed_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2sp"
                    android:background="@color/trans"
                    android:text="@string/zero"
                    android:theme="@style/mySmallText" />

                <TextView
                    android:id="@+id/net_up_speed_unit_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/trans"
                    android:text="@string/mem_unit"
                    android:theme="@style/mySmallTextSecondary" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0sp"
            android:gravity="center_vertical|start" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/down_second"
                android:theme="@style/mySmallTextSecondary"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0sp"
                android:layout_gravity="start" >

                <TextView
                    android:id="@+id/net_down_speed_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2sp"
                    android:background="@color/trans"
                    android:text="@string/zero"
                    android:theme="@style/mySmallText" />

                <TextView
                    android:id="@+id/net_down_speed_unit_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/trans"
                    android:text="@string/mem_unit"
                    android:theme="@style/mySmallTextSecondary" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0sp"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0sp"
                android:layout_gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/trans"
                    android:text="@string/down"
                    android:theme="@style/mySmallTextSecondary" />

                <TextView
                    android:id="@+id/net_down_text_view"
                    android:layout_width="36sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:background="@color/trans"
                    android:text="@string/zero"
                    android:theme="@style/mySmallText" />

                <TextView
                    android:id="@+id/net_down_unit_text_view"
                    android:layout_marginStart="5sp"
                    android:layout_width="14sp"
                    android:layout_height="wrap_content"
                    android:background="@color/trans"
                    android:text="@string/mem_unit"
                    android:theme="@style/mySmallTextSecondary" />

                <TextView
                    android:layout_marginStart="5sp"
                    android:layout_width="6sp"
                    android:layout_height="12sp"
                    android:layout_gravity="center"
                    android:background="@drawable/corners_bg_yellow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0sp"
                android:layout_gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/trans"
                    android:text="@string/up"
                    android:theme="@style/mySmallTextSecondary" />

                <TextView
                    android:id="@+id/net_up_text_view"
                    android:layout_width="36sp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:background="@color/trans"
                    android:text="@string/zero"
                    android:theme="@style/mySmallText" />

                <TextView
                    android:id="@+id/net_up_unit_text_view"
                    android:layout_marginStart="5sp"
                    android:layout_width="14sp"
                    android:layout_height="wrap_content"
                    android:background="@color/trans"
                    android:text="@string/mem_unit"
                    android:theme="@style/mySmallTextSecondary" />

                <TextView
                    android:layout_marginStart="5sp"
                    android:layout_width="6sp"
                    android:layout_height="12sp"
                    android:layout_gravity="center"
                    android:background="@drawable/corners_bg_green" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="20sp"
            android:layout_height="match_parent" />

        <com.android.argusyes.ui.CircleProgress
            android:id="@+id/net_bar"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_gravity="center"
            android:background="@color/trans"
            android:indeterminate="true"
            android:indeterminateOnly="true"
            app:myCPProgress="0"
            app:myCPProgressSecond="0"
            app:myCPMax="100"
            app:myCPBackgroundColor="?myHintColor"
            app:myCPProgressColor="?highlightYellow"
            app:myCPProgressSecondColor="?highlightGreen"
            app:myCPTextSize="10sp"
            app:myCPTextColor="?myTextSecondaryColor"
            app:myCPPTextShow="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </LinearLayout>

</LinearLayout>