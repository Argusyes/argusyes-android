<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/myFragment"
    tools:context=".fragment.ServerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:theme="@style/noPaddingLayout">

        <TextView
            android:id="@+id/server_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/material_motion_duration_long_1"
            android:text="@string/nav_title_server"
            android:theme="@style/myFragmentTitleText"/>

        <ImageButton
            android:id="@+id/server_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/trans"
            android:src="@drawable/ic_plus"
            android:theme="@style/myFragmentTitleButton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/noPaddingLayout"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:theme="@style/mySearchLayout">

            <ImageView
                android:id="@+id/server_search_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7sp"
                android:theme="@style/mySearchImageView"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/server_search_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:theme="@style/mySearchTextInput"/>

        </LinearLayout>

        <Button
            android:id="@+id/server_search_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@color/trans"
            android:visibility="gone"
            android:theme="@style/mySearchCancelButton"/>

    </LinearLayout>

</LinearLayout>